{
    "httpHeaders": [
        {
            "urls": [
                "https://docs.github.com/"
            ],
            "headers": {
                "Accept-Encoding": "zstd, br, gzip, deflate"
            }
        }
    ],

    "ignorePatterns": [
        {
            "pattern": "^http://localhost",
            "comment": "Ignore local links"
        },
        {
            "pattern": "^https?://www.plantuml.com/.*$",
            "comment": "Ignore PlantUML diagrams (timeout can be long)"
        },
        {
            "pattern": "https://telephonie.etsmtl.ca/|https://reservlocaux-gestion.etsmtl.ca/",
            "comment": "Ignore sites that require the VPN to access"
        },
        {
            "pattern": "^https?://(x.com|twitter.com)/.*$",
            "comment": "Ignore Elon Musk's politics on accessing Twitter"
        }
    ],
    "aliveStatusCodes": [200, 206, 403, 999]
}
